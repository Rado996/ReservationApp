<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bachelor.reservationapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ReservationApp.NoActionBar">
        <activity android:name="com.bachelor.reservation.ConversationsActivity"></activity>
        <activity android:name="com.bachelor.reservation.MessagesActivity" />
        <activity android:name="com.bachelor.reservation.UserDetailActivity" />
        <activity android:name="com.bachelor.reservation.UserProfileActivity" />
        <activity android:name="com.bachelor.reservation.RegisterActivity" />
        <activity android:name="com.bachelor.reservation.LoginActivity" />
        <activity android:name="com.bachelor.reservation.ReservationActivity" />
        <activity android:name=".PostPicture" />
        <activity android:name="com.bachelor.reservation.Procedure" />
        <activity android:name="com.bachelor.reservation.AddService" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ReservationApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
    </application>

    <permission
        android:name="android.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>